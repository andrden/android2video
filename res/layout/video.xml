<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/camera_preview_parent"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">

	<FrameLayout
			android:id="@+id/camera_preview"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"/>
    <!--<Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Sound"-->
            <!--android:onClick="click1"/>-->
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal"
            >
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Pixels" android:onClick="pixelsCheckboxClicked"/>
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Sound" android:onClick="soundCheckboxClicked"/>
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Flash" android:onClick="flashCheckboxClicked"/>

    </LinearLayout>
</LinearLayout>

